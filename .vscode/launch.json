{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Deno: Launch",
            "type": "pwa-node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--inspect-brk",
                "-A",
                "--unstable",
                "${file}"
            ],
            "attachSimplePort": 9229,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.ts"
            ]
        }
    ]
}
